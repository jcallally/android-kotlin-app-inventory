<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.dashboard.products.home.DashboardProductsHomeActivity">

    <FrameLayout
        android:id="@+id/container_products_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bnv_products_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/white"
            app:itemIconTint="@drawable/nav_item_color_state"
            app:itemTextColor="@drawable/nav_item_color_state"
            app:itemRippleColor="@color/green"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_navigation_menu_product"
            tools:ignore="PrivateResource" />

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>